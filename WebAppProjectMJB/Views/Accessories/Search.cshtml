@model IEnumerable<WebAppProjectMJB.Models.Accessories>

@{
    ViewData["Title"] = "Index";
}



<div class="container">
    <div class="row" id="tab">
        @foreach (var item in Model) //the main loop for put more items
        {


            <div class="col-sm-3">


                <div class="card" style="width: 18rem;">
                    <img src="@item.Image" class="card-img-top" alt="no">
                    <div class="card-body">
                        <h5 class="card-title"> @item.Name</h5>
                        <p class="card-text">Console: @item.Console.Name</p>
                        <p class="card-text"> Price:  @item.Price₪</p>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Go to Game page</a>
                        @if (Context.User.IsInRole("Admin"))
                        {
                            <div>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </div>
                        }
                    </div>
                </div>


            </div>

        }

    </div>
</div>


@section Scripts{
    <script src="~/js/Search.js" asp-append-version="true"></script>

}