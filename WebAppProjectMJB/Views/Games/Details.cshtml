@model WebAppProjectMJB.Models.Game

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    @if (Context.User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a asp-action="Index">Back to List</a>
    }
</div>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Summary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Summary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Console)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Console.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trailer)
        </dt>
        <dd class="col-sm-10">
            <iframe width="420" height="345" src="@Model.Trailer"></iframe>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CoverImage)
        </dt>
        <dt class="col-sm-4">
            <img src="@Model.CoverImage" class="img-fluid" alt="" />
        </dt>

    </dl>

    <div>
        <a asp-action="Cart" asp-route-id="@Model.Id" class="btn btn-primary"> Add to Cart</a>
    </div>
    
</div>

